.sign-up-session4
  .sign-up-session4__header
    =render "users/sessions-header"
  .sign-up-session4__body
    = form_for @card, method: :post, name: "inputForm", html: {id: 'charge-form', class: 'forth-main-wrapper__box'} do |f|
      .sign-up-session4__body__head
        支払い方法
      .sign-up-session4__body__contents
        .sign-up-session4__body__contents__card-number.box
          .sign-up-session4__body__contents__card-number__form
            %label{class:'box-group--label', for: 'card_number'} カード番号
            %span.input-require
              必須
            = text_field_tag "number", "", class: 'form card-number-form', type: "text", id: 'card_number', maxlength: "16", placeholder: "半角数字のみ"
          .sign-up-session4__body__contents__card-number__logos
            %ul
              %li 
              = image_tag 'iconfinder_mastercard-curved_38602.png', alt: 'card', size: '48x24', class: 'mastercard'
              %li
              = image_tag 'iconfinder_visa-curved_38610.png', alt: 'card', size: '48x24', class: 'visacard'
              %li
              = image_tag 'iconfinder_mastercard-curved_38602.png', alt: 'card', size: '48x24', class: 'mastercard'
              %li
              = image_tag 'iconfinder_visa-curved_38610.png', alt: 'card', size: '48x24', class: 'visacard'
              %li
              = image_tag 'iconfinder_mastercard-curved_38602.png', alt: 'card', size: '48x24', class: 'mastercard'
              %li
              = image_tag 'iconfinder_visa-curved_38610.png', alt: 'card', size: '48x24', class: 'visacard'
              %li
              = image_tag 'iconfinder_mastercard-curved_38602.png', alt: 'card', size: '48x24', class: 'mastercard'
        .sign-up-session4__body__contents__card-deadline.box
          .sign-up-session4__body__contents__card-deadline__title
            有効期限
            %span 必須
          .sign-up-session4__body__contents__card-deadline__form1.selecter
            %select#exp_month{name: "exp_month", type: "text"}
              %option{value:"1"} 01
              %option{value:"2"} 02
              %option{value:"3"} 03
              %option{value:"4"} 04
              %option{value:"5"} 05
              %option{value:"6"} 06
              %option{value:"7"} 07
              %option{value:"8"} 08
              %option{value:"9"} 09
              %option{value:"10"} 10
              %option{value:"11"} 11
              %option{value:"12"} 12
              %i.fas.fa-chevron-down
            %span{class: "date"} 月
          .sign-up-session4__body__contents__card-deadline__form2.selecter
            %select#exp_year{name: "exp_year", type: "text"}
              %option{value:"2020"} 20
              %option{value:"2021"} 21
              %option{value:"2022"} 22
              %option{value:"2023"} 23
              %option{value:"2024"} 24
              %option{value:"2025"} 25
              %option{value:"2026"} 26
              %option{value:"2027"} 27
              %option{value:"2028"} 28
              %option{value:"2029"} 29
              %option{value:"2030"} 30
              %i.fas.fa-chevron-down
            %span{class: "date"} 年
        .sign-up-session4__body__contents__securitycode.box
          .sign-up-session4__body__contents__securitycode__title
            セキュリティコード
            %span 必須
            = text_field_tag "cvc", "", class: 'payment__security-code', type: "text", id: "cvc", maxlength: "4" ,placeholder: "カード背面４桁もしくは３桁の番号"
          .sign-up-session4__body__contents__securitycode__help
            %i.fas.fa-question-circle
            カード裏面の番号とは？
        .sign-up-session4__body__contents__next.box
          =f.submit "追加する", class: "next", id: "token_submit", type: 'button'
    .sign-up-session4__footer
  =render "users/users-footer"
